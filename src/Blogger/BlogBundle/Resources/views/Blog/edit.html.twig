{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title%}Edit a review {% endblock %}

{% block body %}
    <h1>Edit your review</h1>
{#    {{ form(form) }}#}
{#    <p><a href="{{ path('blog_delete',{id: reviews.id}) }}">delete</a></p>#}


    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.title, 'Enter the Title',{'attr': {'for': 'title'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control input-lg', 'id': 'title', 'placeholder': 'Enter the Review Title', 'required': 'required'}}) }}
        <small id="titleHelp" class="form-text text-muted">{{ form_errors(form.title) }}</small>
    </div>
    <div class="form-group">
        {{ form_label(form.article, 'Enter the review',{'attr': {'for': 'review'}}) }}
        {{ form_widget(form.article, {'attr': {'class': 'form-control input-lg', 'id': 'review', 'placeholder': 'Enter the Review', 'required': 'required'}}) }}
        <small id="articleHelp" class="form-text text-muted">{{ form_errors(form.article) }}</small>
    </div>
    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-lg btn-primary'}}) }}
    <a class="btn btn-lg btn-primary" role="button" href="{{ path('blog_delete',{id: reviews.id}) }}">Delete</a>
    {{ form_end(form) }}

{% endblock %}