{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title%}Edit Album entry{% endblock %}

{% block body %}
    <h1>Edit Album entry</h1>
{#    {{ form(form) }}#}
{#    <p><a href="{{ path('blog_delete',{id: album.id}) }}">delete</a></p>#}
{#    #}

    {{ form_start(form, { attr: {novalidate: 'novalidate'} }) }}

    <div class="form-group">
        {{ form_label(form.title, 'Enter the Album Title',{'attr': {'for': 'title'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control input-lg', 'id': 'title', 'placeholder': 'Enter the Album Title', 'required': 'required'}}) }}
        <small id="titleHelp" class="form-text text-muted">{{ form_errors(form.title) }}</small>
    </div>
    <div class="form-group">
        {{ form_label(form.artist, 'Enter the Artist',{'attr': {'for': 'author'}}) }}
        {{ form_widget(form.artist, {'attr': {'class': 'form-control input-lg', 'id': 'aritst', 'placeholder': 'Enter the Artist', 'required': 'required'}}) }}
        <small id="authorHelp" class="form-text text-muted">{{ form_errors(form.artist) }}</small>
    </div>
    <div class="form-group">
        {{ form_label(form.trackList, 'Enter the trackList',{'attr': {'for': 'summary'}}) }}
        {{ form_widget(form.trackList, {'attr': {'class': 'form-control input-lg', 'maxlength': '500', 'id': 'trackList', 'placeholder': 'Enter the trackList', 'required': 'required'}}) }}
        <small id="summaryHelp" class="form-text text-muted">{{ form_errors(form.trackList) }}</small>
    </div>
    <div class="form-group">
        {{ form_label(form.image, 'Select an image',{'attr': {'for': 'image'}}) }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control input-lg', 'id': 'image', 'placeholder': 'Select the ALbum cover'}}) }}
        <small id="imageHelp" class="form-text text-muted">{{ form_errors(form.image) }}</small>
    </div>
    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-lg btn-primary'}}) }}
    <a class="btn btn-lg btn-primary" role="button" href="{{ path('deletealbum',{id: album.id}) }}">Delete</a>
    {{ form_end(form) }}


{% endblock %}