<div class="form-group">
    {{ form_label(form.firstName, 'Enter your First Name',{'attr': {'for': 'fullname'}}) }}
    {{ form_widget(form.firstName, {'attr': {'class': 'form-control input-lg', 'id': 'fullname', 'placeholder': 'John Smith', 'required': 'required'}}) }}
    <small id="firstNameHelp" class="form-text text-muted">{{ form_errors(form.firstName) }}</small>

    <div class="form-group">
        {{ form_label(form.email, 'Enter your email',{'attr': {'for': 'email'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg', 'id': 'email', 'placeholder': 'email@gmail.com', 'required': 'required'}}) }}
        <small id="emailHelp" class="form-text text-muted">{{ form_errors(form.email) }}</small>
    </div>

    <div class="form-group">
        {{ form_label(form.username, 'Enter your username',{'attr': {'for': 'username'}}) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control input-lg', 'id': 'fullname', 'placeholder': 'John1', 'required': 'required'}}) }}
        <small id="usernameHelp" class="form-text text-muted">{{ form_errors(form.username) }}</small>

    <div class="form-group">
        {{ form_label(form.plainPassword.first, 'Enter your password',{'attr': {'for': 'plainPassword'}}) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg', 'id': 'plainPassword', 'placeholder': 'Enter your password', 'required': 'required'}}) }}
        <small id="passwordHelp" class="form-text text-muted">{{ form_errors(form.plainPassword.first) }}</small>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.second, 'Enter your password again',{'attr': {'for': 'plainPassword2'}}) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg', 'id': 'plainPassword2', 'placeholder': 'Enter your password again', 'required': 'required'}}) }}
        <small id="passwordtwoHelp" class="form-text text-muted">{{ form_errors(form.plainPassword.second) }}</small>
    </div>

    <div>
        <input class="btn btn-lg btn-primary"  type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>

</div>


{{ form_end(form) }}

